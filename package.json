{
   "name": "chenv",
   "version": "0.0.8",
   "description":
      "CLI to deploy chrome extension continuously by enviroment variables",
   "repository": "https://github.com/kthjm/chenv",
   "author": "kthjm <toxictoxer@gmail.com>",
   "main": "lib",
   "bin": "chenv.js",
   "license": "MIT",
   "keywords": [
      "chrome",
      "extension",
      "cli",
      "webstore",
      "publish",
      "deploy",
      "update",
      "upload"
   ],
   "prettier": {
      "tabWidth": 3,
      "semi": false,
      "singleQuote": true
   },
   "babel": {
      "presets": [
         [
            "env",
            {
               "targets": {
                  "node": "6"
               }
            }
         ],
         "flow"
      ],
      "plugins": ["add-module-exports"],
      "env": {
         "test": {
            "presets": ["power-assert"],
            "plugins": ["istanbul"]
         }
      }
   },
   "nyc": {
      "require": ["babel-register"],
      "include": ["src"],
      "sourceMap": false,
      "instrument": false
   },
   "scripts": {
      "typed": "flow-typed",
      "pretest": "flow",
      "test": "cross-env NODE_ENV=test nyc mocha -t 10000",
      "prebuild": "yarn test",
      "build": "cross-env NODE_ENV=build babel ./src -d ./lib",
      "copy": "flow-copy-source ./src ./lib",
      "format": "prettier --write **/*.js package.json",
      "postbuild": "run-s format copy",
      "report": "nyc report --reporter=lcov",
      "codecov": "codecov",
      "coverage": "run-s report codecov"
   },
   "devDependencies": {
      "babel-cli": "^6.26.0",
      "babel-plugin-add-module-exports": "^0.2.1",
      "babel-plugin-istanbul": "^4.1.5",
      "babel-plugin-rewire": "^1.1.0",
      "babel-preset-env": "^1.6.0",
      "babel-preset-flow": "^6.23.0",
      "babel-preset-power-assert": "^1.0.0",
      "codecov": "^3.0.0",
      "cross-env": "^5.0.5",
      "flow-bin": "^0.59.0",
      "flow-copy-source": "^1.2.1",
      "flow-typed": "^2.1.5",
      "mocha": "^4.0.1",
      "npm-run-all": "^4.1.1",
      "nyc": "^11.2.1",
      "power-assert": "^1.4.4",
      "prettier": "^1.7.0",
      "rewire": "^3.0.1",
      "sinon": "^4.1.2"
   },
   "dependencies": {
      "commander": "^2.11.0",
      "dotenv": "^4.0.0",
      "dtz": "^1.0.0",
      "got": "^8.0.0",
      "jszip": "^3.1.4",
      "ora": "^1.3.0"
   }
}
