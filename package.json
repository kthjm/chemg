{
   "name": "chenv",
   "version": "0.0.4",
   "description":
      "CLI tool to deploy chrome extension continuously by enviroment variables",
   "repository": "https://github.com/kthjm/chenv",
   "author": "kthjm <toxictoxer@gmail.com>",
   "main": "lib/index.js",
   "bin": "chenv.js",
   "license": "MIT",
   "keywords": [
      "chrome",
      "extension",
      "cli",
      "webstore",
      "publish",
      "deploy",
      "update",
      "upload"
   ],
   "prettier": {
      "tabWidth": 3,
      "semi": false,
      "singleQuote": true
   },
   "babel": {
      "presets": [
         [
            "env",
            {
               "targets": {
                  "node": "6"
               }
            }
         ],
         "flow"
      ],
      "plugins": ["add-module-exports"],
      "env": {
         "test": {
            "presets": ["power-assert"],
            "plugins": ["istanbul"]
         }
      }
   },
   "nyc": {
      "require": ["babel-register"],
      "include": ["src"],
      "sourceMap": false,
      "instrument": false
   },
   "scripts": {
      "typed": "flow-typed",
      "postintall": "typed install",
      "flow": "flow",
      "nycha": "cross-env NODE_ENV=test nyc mocha -t 10000",
      "test": "run-s flow nycha",
      "coverage": "nyc report --reporter=text-lcov | coveralls",
      "build": "cross-env NODE_ENV=build babel ./src -d ./lib",
      "flowcopy": "flow-copy-source ./src ./lib",
      "format": "prettier --write **/*.js package.json",
      "postbuild": "run-s flowcopy format",
      "node": "node --require babel-register"
   },
   "devDependencies": {
      "babel-cli": "^6.26.0",
      "babel-plugin-add-module-exports": "^0.2.1",
      "babel-plugin-istanbul": "^4.1.5",
      "babel-plugin-rewire": "^1.1.0",
      "babel-preset-env": "^1.6.0",
      "babel-preset-flow": "^6.23.0",
      "babel-preset-power-assert": "^1.0.0",
      "babel-register": "^6.26.0",
      "coveralls": "^2.13.1",
      "cross-env": "^5.0.5",
      "flow-bin": "^0.55.0",
      "flow-copy-source": "^1.2.1",
      "flow-typed": "^2.1.5",
      "mocha": "^3.5.3",
      "npm-run-all": "^4.1.1",
      "nyc": "^11.2.1",
      "power-assert": "^1.4.4",
      "prettier": "^1.7.0",
      "rewire": "^2.5.2",
      "sinon": "^3.3.0"
   },
   "dependencies": {
      "commander": "^2.11.0",
      "dtz": "^1.0.0",
      "got": "^7.1.0",
      "node-env-file": "^0.1.8",
      "ora": "^1.3.0"
   }
}
